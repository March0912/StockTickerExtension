<UserControl x:Class="StockTickerExtension.StockToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:scottplt="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             MinHeight="350" MaxWidth="1800" 
             HorizontalAlignment="Left"
             VerticalAlignment="Top">

    <!-- 外层滚动容器：垂直滚动、水平自适应 -->
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch">

        <!-- 主布局：左对齐并水平填满 -->
        <Grid Margin="0"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Top">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 顶部控制面板 -->
            <StackPanel Orientation="Horizontal" Margin="6" Grid.Row="0" HorizontalAlignment="Left">
                <TextBlock Text="Stock Code:" VerticalAlignment="Center" Margin="6,0"/>
                <TextBox x:Name="CodeTextBox" Width="100" Text="301307" VerticalAlignment="Center" />
                <Button x:Name="StartBtn" Content="Start" Margin="6,0" Width="80"/>
                <Button x:Name="StopBtn" Content="Stop" Margin="6,0" Width="80"/>
                <TextBlock x:Name="StockName" Text="" VerticalAlignment="Center" Foreground="Blue" Margin="6,0"/>
                <TextBlock Text="Fluctuation:" VerticalAlignment="Center" />
                <TextBlock x:Name="ChangePercentText" Text="--%" FontWeight="Bold" Margin="6,0" VerticalAlignment="Center"/>
                <TextBlock Text=" " Width="20"/>
                <CheckBox x:Name="AutoStopCheckBox" Content="Stop when closed" IsChecked="False" Margin="6,0" VerticalAlignment="Center"/>
                <ComboBox x:Name="PeriodComboBox" Width="100" SelectedIndex="0" Margin="6,0"/>
                <DatePicker x:Name="DatePickerControl" Width="130" Margin="6,0" IsEnabled="False"
                            SelectedDate="{x:Static sys:DateTime.Today}"
                            DisplayDateEnd="{x:Static sys:DateTime.Today}"
                            VerticalAlignment="Center"/>
                <TextBlock x:Name="StatusText" Text="Please input code" VerticalAlignment="Center" Foreground="Blue" Margin="6,0"/>
            </StackPanel>

            <!-- 第二行：持仓信息 -->
            <StackPanel Orientation="Horizontal" Margin="6" Grid.Row="1" HorizontalAlignment="Left">
                <TextBlock Text="Number of Shares:" VerticalAlignment="Center" Margin="6,0"/>
                <TextBox x:Name="SharesBox" Width="80" Text="400" />
                <TextBlock Text="Cost Price:" VerticalAlignment="Center" Margin="6,0"/>
                <TextBox x:Name="CostBox" Width="80" Text="40.915" />
                <TextBlock Text="Current Price:" VerticalAlignment="Center" Margin="6,0"/>
                <TextBox x:Name="CurrentPrice" Width="80" Text="" IsReadOnly="True"/>
                <TextBlock x:Name="PositionProfitText" Text="Unrealized P/L: --" Margin="12,0"/>
                <TextBlock x:Name="TodayProfitText" Text="Today's P/L: --" Margin="12,0"/>
            </StackPanel>

            <!-- 第三行：图表区域 -->
            <Grid Grid.Row="2" Margin="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <scottplt:WpfPlot x:Name="WpfPlotPrice" Height="240" HorizontalAlignment="Stretch" Grid.Row="0" Margin="0,0,0,0"/>
            </Grid>

            <!-- 底部提示 -->
            <TextBlock Grid.Row="3" Text="Hint: Supports codes like 000001 / 300750 / 601318 | Red: Mainly buying, Green: Mainly selling"
                       FontSize="11" Foreground="Gray" Margin="3"/>
        </Grid>
    </ScrollViewer>
</UserControl>
