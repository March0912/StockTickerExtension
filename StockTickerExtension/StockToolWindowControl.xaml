<UserControl x:Class="StockTickerExtension.StockToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:scottplt="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
             Height="350" Width="1100" 
             HorizontalAlignment="Left"
             VerticalAlignment="Top">

    <!-- 外层滚动容器：垂直滚动、水平自适应 -->
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch">

        <!-- 主布局：左对齐并水平填满 -->
        <Grid Margin="0"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Top">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 顶部控制面板 -->
            <StackPanel Orientation="Horizontal" Margin="6" Grid.Row="0" HorizontalAlignment="Left">
                <TextBlock Text="股票代码:" VerticalAlignment="Center" Margin="6,0"/>
                <TextBox x:Name="CodeTextBox" Width="100" Text="301307" VerticalAlignment="Center" />
                <Button x:Name="StartBtn" Content="开始监控" Margin="6,0" Width="80"/>
                <Button x:Name="StopBtn" Content="停止监控" Margin="6,0" Width="80"/>
                <TextBlock Text=" " Width="20"/>
                <TextBlock Text="涨跌:" VerticalAlignment="Center" />
                <TextBlock x:Name="ChangePercentText" Text="--%" FontWeight="Bold" Margin="6,0" VerticalAlignment="Center"/>
                <TextBlock Text=" " Width="20"/>
                <CheckBox x:Name="AutoStopCheckBox" Content="关闭时自动停止" IsChecked="False" Margin="6,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="StatusText" Text="请输入股票代码" VerticalAlignment="Center" Foreground="Blue"/>
            </StackPanel>

            <!-- 第二行：持仓信息 -->
            <StackPanel Orientation="Horizontal" Margin="6" Grid.Row="1" HorizontalAlignment="Left">
                <TextBlock Text="持股数量:" VerticalAlignment="Center" Margin="6,0"/>
                <TextBox x:Name="SharesBox" Width="80" Text="400" />
                <TextBlock Text="成本价:" VerticalAlignment="Center" Margin="6,0"/>
                <TextBox x:Name="CostBox" Width="80" Text="40.915" />
                <TextBlock Text="当前价:" VerticalAlignment="Center" Margin="6,0"/>
                <TextBox x:Name="CurrentPrice" Width="80" Text="" />
                <TextBlock x:Name="PositionProfitText" Text="持仓盈亏: --" Margin="12,0"/>
                <TextBlock x:Name="TodayProfitText" Text="今日盈亏: --" Margin="12,0"/>
                <Button x:Name="UpdateProfitBtn" Content="更新盈亏" Margin="6,0" Width="80"/>
            </StackPanel>

            <!-- 第三行：图表区域 -->
            <Grid Grid.Row="2" Margin="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <scottplt:WpfPlot x:Name="WpfPlotPrice" Height="240" HorizontalAlignment="Stretch" Grid.Row="0" Margin="0,0,0,0"/>
            </Grid>

            <!-- 底部提示 -->
            <TextBlock Grid.Row="3" Text="提示：支持 000001/300750/601318 等代码 | 红色: 买入为主，绿色: 卖出为主"
                       FontSize="11" Foreground="Gray" Margin="3"/>
        </Grid>
    </ScrollViewer>
</UserControl>
